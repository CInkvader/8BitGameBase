<UserControl x:Class="_8BitGameBase.View.UserControls.BitButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_8BitGameBase.View.UserControls"
             d:DataContext="{d:DesignInstance Type=local:BitButton}"
             
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="120">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Bottom">
            <Button x:Name="BtnBit" Style="{StaticResource btnDefaultStyle}"
        Content="{Binding BtnContent}" Tag="{Binding BitValue}"
        MinWidth="100" MinHeight="100" Height="100" Width="100" Background="#FF8DB59A" Foreground="#FF163832"/>
            <Border BorderBrush="#FF163832" BorderThickness="1" Margin="10" />
            <TextBlock x:Name="TbBitValue" Height="25" Text="{Binding BitValue}" FontSize="20"
           TextAlignment="Center" Foreground="#FF163832" Margin="0 -8 0 0"/>
        </StackPanel>
    </Grid>
</UserControl>