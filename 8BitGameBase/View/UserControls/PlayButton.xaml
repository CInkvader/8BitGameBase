<UserControl x:Class="_8BitGameBase.View.UserControls.PlayButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_8BitGameBase.View.UserControls"
             d:DataContext="{d:DesignInstance Type=local:PlayButton}"
             
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="250">
    <Grid>
        <Button x:Name="BtnPlay" Style="{StaticResource btnPlayStyle}"
        Content="{Binding BtnContent}" Height="100" Width="250"/>
    </Grid>
</UserControl>
