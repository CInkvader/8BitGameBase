<UserControl x:Class="_8BitGameBase.View.UserControls.GameLosePrompt"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_8BitGameBase.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"  MinWidth="1000" MinHeight="650">
    <Grid Background="#BFD9E2E4">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="YOU LOSER" FontSize="100" TextAlignment="Center" Foreground="#FF235246" Margin="0 0 0 50"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="BtnRetry" Style="{StaticResource btnPlayStyle}" Content="Retry"
                        Width="220" Height="100" Click="BtnRetry_Click" Margin="0 0 50 0"/>
                <Button x:Name="BtnContinue" Style="{StaticResource btnPlayStyle}" Content="Continue"
                        Width="220" Height="100" Click="BtnContinue_Click" Margin="50 0 0 0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
