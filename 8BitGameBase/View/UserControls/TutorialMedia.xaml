<UserControl x:Class="_8BitGameBase.View.UserControls.TutorialMedia"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_8BitGameBase.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600">
    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource ArcadeFont}"/>
        </Style>
    </UserControl.Resources>
    <Grid Width="600">
        <Image Source="pack://application:,,,/Media/Images/Tutorial.png" Stretch="Uniform"
           HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Text="16 + 8 + 2 + 1 = 27" FontSize="25" Foreground="White"
               Margin="0 0 33 140"
               VerticalAlignment="Center" HorizontalAlignment="Right"/>
        <TextBlock Text="The faster you solve, the higher the score" Width="300" TextAlignment="Center"
               TextWrapping="Wrap" FontSize="25" Foreground="White" Margin="30 320 0 0"
               VerticalAlignment="Center" HorizontalAlignment="Left"/>
    </Grid>
</UserControl>
