<Page x:Class="_8BitGameBase.View.Screens.Leaderboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_8BitGameBase.View.Screens"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      MinHeight="{StaticResource minWindowHeight}" MinWidth="{StaticResource minWindowWidth}"
      Background="{StaticResource GameBackground}"
      Title="Leaderboard">
    <Grid>
        <Button x:Name="BtnBack" Style="{StaticResource btnGreenStyle}" Content="Back" VerticalAlignment="Top" FontFamily="{StaticResource ArcadeFont}"
                Height="70" FontSize="25" Width="100" Click="BtnBack_Click" HorizontalAlignment="Left" Margin="50"/>

        <TextBlock Text="TOP 10 PLAYERS" Foreground="{StaticResource DefaultForegroundDark}" HorizontalAlignment="Center" VerticalAlignment="Top"
                   FontSize="70" Height="70" Margin="0 50 0 0" FontFamily="{StaticResource ArcadeFont}"/>

        <StackPanel Margin="0 150 0 50" Width="900">
            <Border Height="650" Margin="50 15 50 15" Background="Transparent" BorderThickness="5" BorderBrush="{StaticResource DefaultColorDark}">
                <StackPanel>
                    <ListView x:Name="lvLeaderboard" Background="Transparent" BorderThickness="0" Height="auto" Width="800" Padding="20"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Disabled">
                    </ListView>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Page>
