<Page x:Class="_8BitGameBase.View.Screens.Leaderboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_8BitGameBase.View.Screens"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      MinHeight="{StaticResource minWindowHeight}" MinWidth="{StaticResource minWindowWidth}"
      Background="{StaticResource GameBackground}"
      Title="Leaderboard">
    <Grid>
        <StackPanel Margin="0 50 0 50" Width="900">
            <Button x:Name="BtnBack" Style="{StaticResource btnGreenStyle}" Content="Back"
                    Height="70" FontSize="25" Width="100" Click="BtnBack_Click" HorizontalAlignment="Left"/>
            <Border Height="700" Margin="15" Background="Transparent" BorderThickness="2" BorderBrush="#FF235246" CornerRadius="50">
                <StackPanel>
                    <TextBlock HorizontalAlignment="Center" Text="TOP 10 PLAYERS" Foreground="#FF235246" FontSize="50" Height="70" Margin="0 10 0 0"/>
                    <ListView x:Name="lvLeaderboard" Background="Transparent" BorderThickness="0" Height="auto" Width="800"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Disabled">
                    </ListView>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Page>
