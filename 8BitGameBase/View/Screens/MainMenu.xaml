<Page x:Class="_8BitGameBase.View.Screens.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      
      xmlns:local="clr-namespace:_8BitGameBase.View.Screens"
      xmlns:UserControls="clr-namespace:_8BitGameBase.View.UserControls"
      
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" MinWidth="1000" MinHeight="650"
      Title="MainMenu"
      Background="#FFD9E2E4">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <Grid x:Name="GridMenu" Grid.Row="1" Visibility="Visible">
            <Button x:Name="BtnPlay" Style="{StaticResource btnPlayStyle}"
                    Content="{Binding BtnContent}" Height="100" Width="250"
                    Click="BtnPlay_Click"/>
        </Grid>
    </Grid>
</Page>
